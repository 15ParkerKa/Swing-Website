doctype html
html(ng-app="swingclub")
    include ../includes/head.jade
    body
        include ../js/directives/navbar/navbar.jade

        main
            .container(ng-controller="cardController")
                .container.card-panel.white(ng-repeat="card in cards")
                    .card-content
                        h2 {{card.title}}

                        p {{card.content}}

                        div(ng-repeat="url in urls")
                            br
                            a(href={{url.url}} target="_blank") {{url.title}}

        //Load at the bottom for faster page times
        include ../includes/jsFrameworks.jade
    //Footer
    include ../includes/footer.index.jade